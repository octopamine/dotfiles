# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
	colors = true
	color_good = "#BBBBBB"
	color_bad = "#ff00ff"
	color_degraded = "#ff00ff"
	interval = 1
}

order += "volume master"
order += "cpu_usage"
order += "disk /"
order += "tztime local"

volume master {
	device = "default"
	mixer = "Master"
	mixer_idx = 0
	# termsyn font
	format = " ♪: %volume  " 
}

cpu_usage {
	format = "%usage "
}

disk "/" {
	format = "%avail:/ " 
}

tztime local {
	#format = " %h-%d - %H:%M  "
 	format = " %h-%d %H:%M:%S ☰ "
}
